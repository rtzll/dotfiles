# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# load autocompletions
fpath=(~/.zsh $fpath)
autoload -Uz compinit
compinit -u

if command -v nvim >/dev/null; then
    alias vim=nvim
    alias vi=nvim
fi

if command -v hx >/dev/null; then
    export EDITOR=hx
    export VISUAL=hx
else
    export EDITOR=vim
    export VISUAL=vim
fi

export PAGER=less
export LESS="-F -g -i -M -R -S -w -X -z-4"
export LANG="en_US.UTF-8"

# pnpm
export PNPM_HOME="/Users/christianrotzoll/Library/pnpm"
export PATH="$PNPM_HOME:$PATH"

# deno
export DENO_INSTALL="/Users/christianrotzoll/.deno"
export PATH="$DENO_INSTALL/bin:$PATH"

# bun
[ -s "/Users/christianrotzoll/.bun/_bun" ] && source "/Users/christianrotzoll/.bun/_bun"
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# zls for zig lsp
export PATH="$HOME/development/zls/zig-out/bin:$PATH"

# golang bin dir on path
export PATH="$HOME/go/bin:$PATH"

[ "$TERM" = "xterm-kitty" ] && alias ssh="kitty +kitten ssh"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# bm - browse chrome bookmarks
bm() {
     bookmarks_path=~/Library/Application\ Support/Google/Chrome/Default/Bookmarks

     jq_script='
        def ancestors: while(. | length >= 2; del(.[-1,-2]));
        . as $in | paths(.url?) as $key | $in | getpath($key) | {name,url, path: [$key[0:-2] | ancestors as $a | $in | getpath($a) | .name?] | reverse | join("/") } | .path + "/" + .name + "\t" + .url'

    jq -r "$jq_script" < "$bookmarks_path" \
        | sed -E $'s/(.*)\t(.*)/\\1\t\x1b[36m\\2\x1b[m/g' \
        | fzf --ansi \
        | cut -d$'\t' -f2 \
        | xargs open
}

# Created by `pipx` on 2023-12-02 11:35:22
export PATH="$PATH:/Users/christianrotzoll/.local/bin"

# Generated for envman. Do not edit.
[ -s "$HOME/.config/envman/load.sh" ] && source "$HOME/.config/envman/load.sh"

eval "$(zoxide init zsh)"
